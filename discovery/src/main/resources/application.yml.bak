spring:
  application:
    name: microservice-discovery-eureka-ha
---
spring:
  profiles: peer1                                 # 指定profile=peer1
server:
  port: 8761
  ssl:
      key-store: classpath:sample.jks
      key-store-password: secret
      key-password : password
security:
  basic:
    enabled: true
  user:
    name: admin
    password: admin
eureka:
  instance:
    hostname: peer1                               
  client:
    serviceUrl:
      defaultZone: https://localhost:8762/eureka/     

